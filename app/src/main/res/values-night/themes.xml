<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Base.BuggyNote2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">@color/dark_grey_A50</item>
        <item name="android:statusBarColor">@color/dark_grey_A50</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!--        <item name="actionBarItemBackground">?colorOnPrimary</item>-->
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="actionModeStyle">@style/Theme.BuggyNote2.ActionModeOverlay</item>
    </style>

    <style name="Theme.BuggyNote2" parent="Theme.Base.BuggyNote2">
        <item name="backgroundColor">@color/dark_grey</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_A200</item>
        <item name="colorPrimaryVariant">@color/pink_A700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_A200</item>
        <item name="colorSecondaryVariant">@color/pink_A200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryLight">@color/pink_A100</item>

        <item name="launcherBackground">@drawable/ic_launcher_background</item>
        <item name="launcherForeground">@drawable/ic_launcher_foreground</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

