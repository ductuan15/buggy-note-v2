<resources>

    <!-- Base application theme. -->
    <style name="Theme.Base.BuggyNote2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="windowActionModeOverlay">true</item>

        <!--        <item name="actionBarItemBackground">?colorOnPrimary</item>-->
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="actionModeStyle">@style/Theme.BuggyNote2.ActionModeOverlay</item>
    </style>

    <style name="Theme.BuggyNote2" parent="Theme.Base.BuggyNote2">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/pink_500</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="colorPrimaryLight">@color/pink_100</item>

        <item name="launcherBackground">@drawable/ic_launcher_background</item>
        <item name="launcherForeground">@drawable/ic_launcher_foreground</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BuggyNote2.Blue" parent="Theme.Base.BuggyNote2">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorPrimaryLight">@color/blue_100</item>

        <item name="launcherBackground">@drawable/ic_launcher_background_blue</item>
        <item name="launcherForeground">@drawable/ic_launcher_foreground_blue</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BuggyNote2.Indigo" parent="Theme.Base.BuggyNote2">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorPrimaryLight">@color/indigo_100</item>

        <item name="launcherBackground">@drawable/ic_launcher_background_indigo</item>
        <item name="launcherForeground">@drawable/ic_launcher_foreground_indigo</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BuggyNote2.Green" parent="Theme.Base.BuggyNote2">
        <item name="colorPrimary">@color/green2_primary</item>
        <item name="colorPrimaryVariant">@color/green2_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green2_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/green2_dark</item>
        <item name="colorPrimaryLight">@color/green2_light</item>

        <item name="launcherBackground">@drawable/ic_launcher_background_green</item>
        <item name="launcherForeground">@drawable/ic_launcher_foreground_green</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BuggyNote2.Grey" parent="Theme.Base.BuggyNote2">
        <item name="colorPrimary">@color/blue_grey_500</item>
        <item name="colorPrimaryVariant">@color/blue_grey_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_grey_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/blue_grey_700</item>
        <item name="colorPrimaryLight">@color/blue_grey_100</item>

        <item name="launcherBackground">@drawable/ic_launcher_background_grey</item>
        <item name="launcherForeground">@drawable/ic_launcher_foreground_grey</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BuggyNote2.Popup" parent="">
        <item name="enforceMaterialTheme">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.BuggyNote2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BuggyNote2.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:colorBackground">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Theme.BuggyNote2.Tag" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@drawable/stroke_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Theme.BuggyNote2.TagFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textSize">5sp</item>
        <item name="chipBackgroundColor">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@drawable/stroke_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Theme.BuggyNote2.ActionModeOverlay" parent="Widget.AppCompat.Light.ActionMode.Inverse">
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="itemBackground">?colorOnPrimary</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorPrimary">?colorPrimary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">?colorSurface</item>
        <item name="actionMenuTextColor">?colorPrimary</item>
    </style>

</resources>