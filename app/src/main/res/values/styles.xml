<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="placeholder_emoticon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?textAppearanceHeadline2</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="placeholder_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
    </style>

    <style name="tag_filter_list_recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="note_list_recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/item_note_margin</item>
        <item name="android:layout_marginVertical">@dimen/item_note_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:animateLayoutChanges">false</item>
    </style>
</resources>