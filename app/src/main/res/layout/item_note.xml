<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="note"
            type="com.hcmus.clc18se.buggynote2.data.NoteWithTags" />

        <import type="android.view.View" />

        <variable
            name="chipOnClickListener"
            type="View.OnClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0dp"
        app:strokeColor="@drawable/stroke_color"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                noteTitleFormat="@{note}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@{note.note.title}"
                android:textAppearance="?textAppearanceHeadline6"
                tools:text="Title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/note_content"
                noteContentFormat="@{note}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:text="@{note.note.noteContent}"
                android:textAlignment="gravity"
                android:textAppearance="?textAppearanceBody2"
                tools:text="@tools:sample/lorem/random" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textAppearance="?textAppearanceCaption"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24"
                app:timeStampFromLong="@{note.note.lastModify}"
                tools:text="@tools:sample/date/ddmmyy" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tag_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:paddingVertical="0dp"
                app:chipSpacingHorizontal="4dp"
                app:itemSpacing="0dp"
                app:lineSpacing="0dp" />
            <!--            app:setOnClickToChips="@{chipOnClickListener}"-->
            <!--                app:chipLimit="@{3}"-->
            <!--                loadTagList="@{note.tags}"-->

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>